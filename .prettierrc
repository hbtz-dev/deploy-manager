{
    "singleQuote": false,
    "printWidth": 80,
    "proseWrap": "always",
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "semi": true,
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.mts"
            ],
            "options": {
                "parser": "typescript"
            }
        }
    ]
}